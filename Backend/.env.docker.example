# Docker Development Environment Variables
# Copy this file to .env.docker and update values as needed
# This file is for Docker-specific overrides

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database URLs (using Docker service names)
POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/campus_connect
MONGODB_URL=mongodb://mongodb:27017/
MONGODB_DB_NAME=campus_connect

# Qdrant Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# Upload Configuration
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# JWT Configuration
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO

# LLM Configuration (optional)
GROQ_API_KEY=
GROQ_MODEL=mixtral-8x7b-32768

# Feature Flags
USE_LLM_CHAT=false
USE_LLM_FEEDBACK=false
USE_QDRANT_MATCHING=false
USE_LLM_RESUME_ENRICH=false
USE_LLM_RESUME_ENRICH_UPDATE_CANDIDATE=false
